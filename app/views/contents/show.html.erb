
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="image">
  <%= image_tag @content.body %>
</div>

<div id="sns">
	<p id="info">SNSで共有して、みんなに見てもらおう！</p>
	<div id="snsButton">
		<div id="twitter">
			<a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja">ツイート</a>
			<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
		</div><!-- /#twitter -->

		<div id="fb">
			<div class="fb-like" data-href="%%current_uri%%" data-width="450" data-layout="button_count" data-show-faces="true" data-send="true"></div>
		</div><!-- /#fb -->
		<div id="back" class="clearFix">
			<%= link_to "TOPに戻る", :action=>"new" %>
		</div><!-- /#back -->
	</div><!-- /#snsButton -->
</div><!-- /#sns -->
<!--
    localの状態でfacebookのdata-hrefを%%current_uri%%にすると消えるのでとりあえず仮のurl入れてます
-->
